<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_drink"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_width="180dp"
        android:layout_height="309dp"
        android:padding="5dp"
        android:elevation="12sp"
        app:cardBackgroundColor="#040404"
        app:cardElevation="24dp"
        app:cardCornerRadius="14dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_drink_image"
            android:layout_width="170dp"
            android:layout_height="140dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/colazero"
            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tv_drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:maxLines="1"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="155dp"
            android:layout_marginStart="16dp"
            android:textColor="#FFCD39"/>
        <TextView
            android:id="@+id/tv_burger_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5400 ì›"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginTop="173dp"
            android:layout_marginStart="106dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/tv_drink_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bu yerda burgerni ichida
            nimalarsjkfhjahfhhiaofhioua borligi yoziladi"
            android:textSize="8sp"
            android:ellipsize="end"
            android:layout_marginTop="206dp"
            android:layout_marginStart="6dp"
            android:maxLines="3"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="#C3C3C3"/>



        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Order now"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_semibold"
            android:background="@drawable/yellow_border"
            android:layout_marginTop="250dp"
            android:layout_marginStart="70dp"
            android:textColor="@color/white"/>



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>