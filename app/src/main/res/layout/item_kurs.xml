<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="135dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cardElevation="20sp"
        app:cardCornerRadius="12sp">

        <!-- Burger image -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10sp"
            android:layout_marginLeft="14sp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/iv_iv_flag1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/dior_miss" />
        </androidx.cardview.widget.CardView>

        <!-- Burger name -->
        <TextView
            android:id="@+id/tv_burger_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Burger king"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="144sp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:textStyle="bold"
            android:textSize="12sp"

            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="314sp"
            android:layout_marginTop="16dp"/>

        <!-- Kcal info -->
        <TextView
            android:id="@+id/tv_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="230 kcal"
            android:textColor="#FF9800"
            android:textSize="12sp"
            android:layout_marginStart="144sp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_medium" />

        <!-- Minus button -->
        <ImageView
            android:id="@+id/btn_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="130sp"
            android:layout_marginTop="70dp"
            android:src="@drawable/minus_circle_svgrepo_com"
            android:contentDescription="Minus Button"/>

        <!-- Count -->
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat_semibold"
            android:layout_marginStart="194sp"
            android:layout_marginTop="76dp"/>

        <!-- 개 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="개"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:layout_marginStart="220sp"
            android:layout_marginTop="78dp"/>

        <!-- Plus button -->
        <ImageView
            android:id="@+id/btn_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/baseline_add_circle_24"
            android:layout_marginStart="250sp"
            android:layout_marginTop="70dp"
            android:contentDescription="Plus Button"/>

        <!-- Delete button -->
        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icons8_delete"
            android:layout_marginTop="45dp"
            android:layout_gravity="center_vertical|end"
            android:layout_alignParentEnd="true"
            android:contentDescription="Delete Button"
            android:layout_marginStart="300sp"/>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
